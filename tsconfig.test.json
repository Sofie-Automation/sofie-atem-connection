{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": ["src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*","vitest.config.mts", "examples/**/*"],
	"exclude": ["node_modules/**",  "scratch/**"],
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"atem-connection": ["./src/index.ts"]
		},
		"types": ["node"],
		"module": "node16",
		"moduleResolution": "node16",
		"skipLibCheck": true,
		"noEmit": true
	},
	"references": [
		{ "path": "./tsconfig.build.json" }
	]
}
